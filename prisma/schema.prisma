// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collection {
  id              Int         @id @default(autoincrement())
  mal_id          Int
  image           String
  title           String?
  user_email      String?
    

  @@unique([user_email, mal_id])   
}

model Comment {
  id              Int         @id @default(autoincrement())
  mal_id          Int
  user_email      String?
  comment         String?
  user_name       String?
  anime_title     String?

}